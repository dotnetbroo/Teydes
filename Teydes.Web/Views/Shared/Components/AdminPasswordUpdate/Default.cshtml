@using Teydes.Service.DTOs.Users

@model UserForChangePasswordDto
@{
    ViewBag.Tabb = 2;
    var ModelId = ViewBag.Id;
}

<div class="card-body border-top @(ViewBag.Tabb == 1 ? "active":"")">
    <div class="notice d-flex bg-light-primary rounded mb-5 mb-xl-10 border-primary border border-dashed p-6">
        <span class="svg-icon svg-icon-2tx svg-icon-primary me-4">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path opacity="0.3" d="M20.5543 4.37824L12.1798 2.02473C12.0626 1.99176 11.9376 1.99176 11.8203 2.02473L3.44572 4.37824C3.18118 4.45258 3 4.6807 3 4.93945V13.569C3 14.6914 3.48509 15.8404 4.4417 16.984C5.17231 17.8575 6.18314 18.7345 7.446 19.5909C9.56752 21.0295 11.6566 21.912 11.7445 21.9488C11.8258 21.9829 11.9129 22 12.0001 22C12.0872 22 12.1744 21.983 12.2557 21.9488C12.3435 21.912 14.4326 21.0295 16.5541 19.5909C17.8169 18.7345 18.8277 17.8575 19.5584 16.984C20.515 15.8404 21 14.6914 21 13.569V4.93945C21 4.6807 20.8189 4.45258 20.5543 4.37824Z" fill="currentColor"></path>
                <path d="M10.5606 11.3042L9.57283 10.3018C9.28174 10.0065 8.80522 10.0065 8.51412 10.3018C8.22897 10.5912 8.22897 11.0559 8.51412 11.3452L10.4182 13.2773C10.8099 13.6747 11.451 13.6747 11.8427 13.2773L15.4859 9.58051C15.771 9.29117 15.771 8.82648 15.4859 8.53714C15.1948 8.24176 14.7183 8.24176 14.4272 8.53714L11.7002 11.3042C11.3869 11.6221 10.874 11.6221 10.5606 11.3042Z" fill="currentColor"></path>
            </svg>
        </span>
        <div class="d-flex flex-stack flex-grow-1 flex-wrap flex-md-nowrap">
            <div class="mb-3 mb-md-0 fw-semibold">
                <h4 class="text-gray-900 fw-bold">Hisobingizni himoyalang</h4>
                <div class="fs-6 text-gray-700 pe-7">Parol eng kamida 8 xonalik bo'lishi kerak. Qatnashishi kerak bo'lgan narsalar: "Katta harf", "Kichik harf", "Raqam" va "Belgilar"</div>
            </div>
        </div>
    </div>

    <form asp-controller="admins" asp-action="PasswordUpdate" asp-route-id="@ModelId" class="form fv-plugins-bootstrap5 fv-plugins-framework">
        <div class="row mb-6">
            <label class="col-lg-4 col-form-label required fw-semibold fs-6">Eski Parol</label>
            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                <input type="password" asp-for="OldPassword" placeholder="Eski Parol" class="form-control form-control-lg form-control-solid">
                <span asp-validation-for=OldPassword class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-6">
            <label class="col-lg-4 col-form-label required fw-semibold fs-6">Yangi Parol</label>
            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                <input type="password" asp-for="NewPassword" placeholder="Yangi Parol" class="form-control form-control-lg form-control-solid">
                <span asp-validation-for=NewPassword class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-12">
            <label class="col-lg-4 col-form-label required fw-semibold fs-6">Parol Tasdiqlang</label>
            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                <input type="password" asp-for=ConfirmPassword placeholder="Parolni Tasdiqlang" class="form-control form-control-lg form-control-solid">
                <span asp-validation-for=ConfirmPassword class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-end">
            <a asp-area="" asp-controller="admins" asp-action="index" class="btn btn-light btn-active-light-primary me-2">Chiqish</a>
            <button type="submit" class="btn btn-primary">Parolni O'zgartirish</button>
        </div>
    </form>
</div>