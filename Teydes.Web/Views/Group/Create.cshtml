@using Teydes.Service.DTOs.Groups;
@model GroupForCreationDto
@{
    ViewBag.Tab = 4;
}

<div class="w-lg-550px bg-body rounded shadow-sm p-10 p-lg-12 mx-auto">
    <form asp-area="" asp-controller="group" asp-action="creategroup" method="post" novalidate="novalidate" class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework" id="kt_sign_up_form">
        <div class="mb-10 text-center">
            <h1 class="text-dark mb-3">
                Guruh qo'shish
            </h1>
        </div>

        <div class="fv-row mb-7 fv-plugins-icon-container">
            <label class="required form-label fw-bold text-dark fs-6">Nomi</label>
            <input type="text" asp-for="Name" class="form-control form-control-lg form-control-solid">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="fv-row mb-7 fv-plugins-icon-container">
            <label class="required form-label fw-bold text-dark fs-6">Sig`imi</label>
            <input type="text" asp-for="Contain" class="form-control form-control-lg form-control-solid">
            <span asp-validation-for="Contain" class="text-danger"></span>
        </div>

        <label class="required form-label fw-bold text-dark fs-6">Kurs</label>
        <select asp-for=CourseId class="form-select form-select-solid fv-row mb-7 fv-plugins-icon-container">
            <span class="select2-selection__placeholder">Kursni tanlang..</span>
            @{
                var courses = ViewBag.Courses;
                foreach (var course in courses)
                {
                    <option value="@course.Id">@course.Name</option>
                }
            }
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </select>

        <div class="text-center mb-3">
            <button type="submit" id="kt_sign_up_submit" class="btn btn-lg btn-primary">
                <span class="indicator-label">
                    Qo'shish
                </span>
            </button>
        </div>
    </form>
</div>