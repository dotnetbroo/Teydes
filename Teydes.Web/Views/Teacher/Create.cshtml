@using Teydes.Service.DTOs.Users;
@model UserForCreationDto
@{
    ViewBag.Tab = 6;
}

<div class="w-lg-550px bg-body rounded shadow-sm p-10 p-lg-12 mx-auto">
    <form asp-area="" asp-controller="teacher" asp-action="createteacher" method="post" novalidate="novalidate" class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework" id="kt_sign_up_form">
        <div class="mb-10 text-center">
            <h1 class="text-dark mb-3">
                Admin qo'shish
            </h1>
        </div>

        <div class="row fv-row mb-7 fv-plugins-icon-container">
            <div class="col-xl-6">
                <label class="required form-label fw-bold text-dark fs-6">Ism</label>
                <input type="text" asp-for="FirstName" class="form-control form-control-lg form-control-solid">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-xl-6">
                <label class="required form-label fw-bold text-dark fs-6">Familiya</label>
                <input type="text" asp-for="LastName" class="form-control form-control-lg form-control-solid">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="fv-row mb-7 fv-plugins-icon-container">
            <label class="required form-label fw-bold text-dark fs-6">Telefon Raqam</label>
            <input type="text" asp-for="PhoneNumber" class="form-control form-control-lg form-control-solid">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="mb-10 fv-row fv-plugins-icon-container" data-kt-password-meter="true">
            <div class="mb-1">
                <label class="form-label fw-bold text-dark fs-6">
                    Parol
                </label>
                <div class="position-relative mb-3">
                    <input type="password" asp-for="Password" class="form-control form-control-lg form-control-solid" name="password" autocomplete="off">
                </div>
            </div>
            <div class="text-muted">
                Harflar, raqamlar va belgilar aralashmasi bilan 8 yoki undan ortiq belgilardan foydalaning.
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="text-center mb-3">
            <button type="submit" id="kt_sign_up_submit" class="btn btn-lg btn-primary">
                <span class="indicator-label">
                    Ro'yxatdan o'tish
                </span>
            </button>
        </div>
    </form>
</div>